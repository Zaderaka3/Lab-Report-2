/*
* Goal: This program will make an LED connected to the Arduino blink on and off at regular intervals.
* Main Theme: Digital output control, using a simple delay loop to toggle the LED state.
*/
// The setup function runs once when you press reset or power the board
void setup() {
 // Initialize the 13 pin as an output
 pinMode(13, OUTPUT);
}
// The loop function runs over and over again forever
void loop() {
 // Turn the LED on by setting the 13 pin HIGH
 digitalWrite(13, HIGH);
 // Wait for one second (1000 milliseconds)
 delay(1000);
 // Turn the LED off by setting the 13 pin LOW
 digitalWrite(13, LOW);
 // Wait for one second
 delay(1000);
}
